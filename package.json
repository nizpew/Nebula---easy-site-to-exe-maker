{
  "name": "nebula",
  "version": "1.0.0",
  "description": "Nebula - A SoundCloud frontend",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --linux AppImage --win nsis"
  },
  "devDependencies": {
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.nebula.app",
    "productName": "Nebula",
    "linux": {
      "target": "AppImage",
      "category": "Utility",
      "icon": "build/icons/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icons/icon.ico"
    }
  },
  "dependencies": {}
}

